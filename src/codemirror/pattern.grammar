@top Pattern { patgrp }

patgrp {
  Patatom+
}

Patatom {
  Repcount
  (
    Patcode |
    Strlit |
    Alternation
  )
}

Patcode {
  Patcodechar+
}

Repcount {
  number |
  number? "." number?
}

Alternation {
  "(" (patgrp ("," patgrp)*)? ")"
}

Strlit {
  quote (strchar | Escquote)* quote
}

Escquote {
  quote quote
}

@tokens {

  Patcodechar {
    $[aulnpceAULNPCE]
  }

  quote { "\"" }

  number { $[0-9]+ }

  strchar { ![\"] }
}
